super + Escape
    pkill -USR1 -x sxhkd ;\
    notify-send "[sxhkd] config reloaded" -t 1


#
# SHORTCUTS
#

ctrl + Return
    urxvt

super + Return
    urxvtc -e "ranger"

ctrl + shift + l
    lock-screen

ctrl + alt + Delete
    lock-screen ; systemctl suspend

shift + Return
    rofi -show run

ctrl + shift + Return
    rofi -show window

ctrl + alt + Return
    rofi -show ssh

super + w
    wal-set

Print
    scrot '%Y-%m-%d-%H-%M-%S_$wx$h.png' --quality 100 \
        -e 'mv $f ~/Screenshots && notify-send "Screenshot $f saved."'

shift + Print
    scrot -s '%Y-%m-%d-%H-%M-%S_$wx$h.png' --quality 100 \
        -e 'mv $f ~/Screenshots && notify-send "Screenshot $f saved."'

XF86Audio{LowerVolume,RaiseVolume}
    pactl set-sink-volume 0 {-5%,+5%}
    #amixer sset Master 5%{-,+}

XF86AudioMute
    pactl set-sink-mute 0 toggle
    #amixer sset Master 0%

XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 10


#
# BPSWM
#

# close or kill
super + {c,k}
    bspc node -{c,k}

# toggle tiled / monocle layout
super + m
    bspc desktop -l next

# focus or swap (shift) node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# window gap via mouse wheel
super + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))
