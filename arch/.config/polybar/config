[module/xwindow]
type = internal/xwindow
format-padding = 1
label = %title%
label-maxlen = 25


[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-foreground = #ffffff
label-focused-background = ${colors.highlight}
label-focused-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.foreground}
